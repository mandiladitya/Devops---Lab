vim docker-compose.yml

version: '3'

services:

 mysql:
  image: mysql
  environment:
  MYSQL_ROOT_PSSWORD: password
 
 wordpress:
 image: wordpress
 ports:
  - 7070:80
 environment:
  WORDPRESS_DB_PASSWORD: password


docker-compose config
docker-compose start

docker-compose up -d
docker-compose down
